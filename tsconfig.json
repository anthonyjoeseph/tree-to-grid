{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2019"],
    "jsx": "react",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
  },
  "exclude": ["dist", "tests", "node_modules"]
}